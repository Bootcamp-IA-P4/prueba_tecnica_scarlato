# 游댢 Configuraci칩n de Flake8 (Python Linter)

[flake8]
# Longitud m치xima de l칤nea
max-line-length = 100

# Archivos y directorios a excluir
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    migrations,
    settings.py,
    node_modules,
    media,
    static/admin,
    static/rest_framework,
    manage.py,
    */migrations/*,
    .github,
    htmlcov,
    .pytest_cache

# C칩digos de error a ignorar
ignore = 
    # E203: whitespace before ':'
    E203,
    # W503: line break before binary operator
    W503,
    # F401: module imported but unused (para __init__.py)
    F401,
    # E501: line too long (manejado por max-line-length)
    E501,
    # W291: trailing whitespace
    W291,
    # W293: blank line contains whitespace
    W293

# N칰mero m치ximo de complejidad ciclom치tica
max-complexity = 15

# Configuraci칩n espec칤fica por archivo
per-file-ignores = 
    # En archivos __init__.py, ignorar imports no utilizados
    __init__.py:F401,
    # En archivos de settings, permitir l칤neas m치s largas
    settings.py:E501,F401,
    # En archivos de tests, permitir l칤neas m치s largas
    test_*.py:E501,F401,
    tests.py:E501,F401,
    # En archivos de configuraci칩n
    *.py:F401

# Mostrar estad칤sticas
statistics = True

# Mostrar el c칩digo fuente de cada error
show-source = True

# Contar errores
count = True
